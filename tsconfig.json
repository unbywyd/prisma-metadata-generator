{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "noImplicitAny": true,
    "moduleResolution": "nodenext",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": [
    "./src/**/**/*.ts"
  ]
}